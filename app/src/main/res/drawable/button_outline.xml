<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary" /> <!-- Change to the desired outline color -->
            <corners android:radius="999dp" /> <!-- Adjust the radius for corner roundness -->
        </shape>
    </item>

    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Change to the desired inner color -->
            <corners android:radius="8dp" /> <!-- Adjust the radius for corner roundness -->
        </shape>
    </item>
</layer-list>