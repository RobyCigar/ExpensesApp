<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/finance"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:src="@drawable/finance"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/finance"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        >
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_screen1_title"
            android:textAppearance="@style/onboarding_h"
            android:id="@+id/title"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/onboarding_p"
            android:text="@string/onboarding_screen1_description"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>